<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/coding">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:src="@mipmap/ic_proflie"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eng:Roqia saif"
        android:textStyle="bold"
        android:paddingTop="10sp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:textStyle="bold"
        android:text="Android Devloper"
        android:textSize="20sp"/>
</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
      >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp">
            <TableRow android:padding="5dp"  android:layout_margin="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/message"
                    android:padding="20dp"
                    android:background="@drawable/icon_border"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/ic_baseline_message_24"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:id="@+id/github"
                    android:layout_marginLeft="65dp"
                  android:src="@mipmap/image_git"/>

            </TableRow>
        <TableRow android:padding="5dp" android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="message"
                android:layout_marginLeft="70dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="75dp"
                android:text="github"
                android:textSize="18sp"/>

        </TableRow>
            <TableRow android:padding="5dp" android:layout_margin="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact"
                    android:padding="20dp"
                    android:background="@drawable/icon_border"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/ic_baseline_contact_phone_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/place"
                    android:padding="20dp"
                    android:layout_marginLeft="65dp"
                    android:background="@drawable/icon_border"
                    android:src="@drawable/ic_baseline_place_24"/>

            </TableRow>
            <TableRow android:padding="5dp" android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contact"
                    android:textStyle="bold"
                    android:layout_marginLeft="70dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="place"
                    android:layout_marginLeft="75dp"
                    android:textSize="18sp"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>